<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CalculadoraTDEE.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Calculadora TDEE">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <!-- Título -->
            <Label x:Name="WelcomeLabel"
                   Text="Calculadora de TDEE"
                   FontSize="32"
                   HorizontalOptions="Center"
                   TextColor="#2E7D32"
                   FontAttributes="Bold" />

            <!-- Botones principales -->
            <Button x:Name="NuevoPacienteBtn"
                    Text="Nuevo Paciente"
                    FontSize="18"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnNuevoPacienteClicked" />

            <Button x:Name="VerPacientesBtn"
                    Text="Ver Pacientes"
                    FontSize="18"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    HeightRequest="50"
                    CornerRadius="25"
                    Clicked="OnVerPacientesClicked" />

            <!-- Formulario de Nuevo Paciente -->
            <Frame x:Name="FormularioFrame"
                   IsVisible="False"
                   BackgroundColor="White"
                   HasShadow="True"
                   CornerRadius="10"
                   Padding="20">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Datos del Paciente"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center" />

                    <!-- Nombre -->
                    <Entry x:Name="NombreEntry"
                           Placeholder="Nombre"
                           FontSize="16"
                           BackgroundColor="#F5F5F5" />
                    <Label x:Name="NombreError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Apellido -->
                    <Entry x:Name="ApellidoEntry"
                           Placeholder="Apellido"
                           FontSize="16"
                           BackgroundColor="#F5F5F5" />
                    <Label x:Name="ApellidoError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Edad -->
                    <Entry x:Name="EdadEntry"
                           Placeholder="Edad (años)"
                           Keyboard="Numeric"
                           FontSize="16"
                           BackgroundColor="#F5F5F5" />
                    <Label x:Name="EdadError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Peso -->
                    <Entry x:Name="PesoEntry"
                           Placeholder="Peso (kg)"
                           Keyboard="Numeric"
                           FontSize="16"
                           BackgroundColor="#F5F5F5" />
                    <Label x:Name="PesoError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Estatura -->
                    <Entry x:Name="EstaturaEntry"
                           Placeholder="Estatura (cm)"
                           Keyboard="Numeric"
                           FontSize="16"
                           BackgroundColor="#F5F5F5" />
                    <Label x:Name="EstaturaError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Sexo -->
                    <Label Text="Sexo:" FontSize="16" FontAttributes="Bold" />
                    <Picker x:Name="SexoPicker"
                            FontSize="16"
                            BackgroundColor="#F5F5F5">
                        <Picker.Items>
                            <x:String>Masculino</x:String>
                            <x:String>Femenino</x:String>
                        </Picker.Items>
                    </Picker>
                    <Label x:Name="SexoError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Nivel de Actividad -->
                    <Label Text="Nivel de Actividad Física:" FontSize="16" FontAttributes="Bold" />
                    <Picker x:Name="ActividadPicker"
                            FontSize="16"
                            BackgroundColor="#F5F5F5">
                        <Picker.Items>
                            <x:String>Sedentario (ejercicio rara vez) - 1.2</x:String>
                            <x:String>Ligero (1-3 días/semana) - 1.375</x:String>
                            <x:String>Moderado (3-5 días/semana) - 1.55</x:String>
                            <x:String>Intenso (6-7 días/semana) - 1.725</x:String>
                            <x:String>Muy intenso (diario + trabajo físico) - 1.9</x:String>
                        </Picker.Items>
                    </Picker>
                    <Label x:Name="ActividadError" TextColor="Red" FontSize="12" IsVisible="False" />

                    <!-- Botones -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <Button Grid.Column="0"
                                x:Name="CalcularBtn"
                                Text="Calcular"
                                FontSize="16"
                                BackgroundColor="#FF9800"
                                TextColor="White"
                                HeightRequest="45"
                                CornerRadius="20"
                                Clicked="OnCalcularClicked" />

                        <Button Grid.Column="1"
                                x:Name="CancelarBtn"
                                Text="Cancelar"
                                FontSize="16"
                                BackgroundColor="#F44336"
                                TextColor="White"
                                HeightRequest="45"
                                CornerRadius="20"
                                Clicked="OnCancelarClicked" />
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- Lista de Pacientes -->
            <Frame x:Name="ListaPacientesFrame"
                   IsVisible="False"
                   BackgroundColor="White"
                   HasShadow="True"
                   CornerRadius="10"
                   Padding="20">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Lista de Pacientes"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#2E7D32"
                           HorizontalOptions="Center" />

                    <CollectionView x:Name="PacientesCollectionView"
                                    SelectionMode="Single"
                                    SelectionChanged="OnPacienteSeleccionado">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10"
                                      BackgroundColor="#F8F9FA"
                                      RowDefinitions="Auto,Auto"
                                      ColumnDefinitions="*,Auto">

                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding NombreCompleto}"
                                           FontSize="16"
                                           FontAttributes="Bold" />

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{Binding InfoBasica}"
                                           FontSize="14"
                                           TextColor="Gray" />

                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                                            Text="🗑️"
                                            FontSize="16"
                                            BackgroundColor="#F44336"
                                            TextColor="White"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            CornerRadius="20"
                                            CommandParameter="{Binding}"
                                            Clicked="OnEliminarPaciente" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="Volver"
                            FontSize="16"
                            BackgroundColor="#9E9E9E"
                            TextColor="White"
                            HeightRequest="45"
                            CornerRadius="20"
                            Clicked="OnVolverClicked" />

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>