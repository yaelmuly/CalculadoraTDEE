             xmlns:viewModels="clr-namespace:CalculadoraTDEE.viewModels"
             xmlns:views="clr-namespace:CalculadoraTDEE.views"
             x:Class="CalculadoraTDEE.MainPage">
    <ContentPage.BindingContext>
        <viewModels:PacienteViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <views:FormularioPaciente />
            <views:ListaPacientes />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>